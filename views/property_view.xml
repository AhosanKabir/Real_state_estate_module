<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<!-- tree view  -->
	<record id="property_view_tree" model= "ir.ui.view">
		<field name="name">Property tree view</field>
		<field name="model">property</field>
		<field name="arch" type="xml">
			<tree multi_edit="1">
				<field name="name"/>
				<field name="postcode"/>
				<field name="owner_id"/>
				<field name="date_availability"/>
				<field name="selling_price"/>
				<field name="garden" optional="1"/>
				<field name="garden_area" optional="1"/>
				<field name="facades"/>
			</tree>
		</field>
	</record>

	<!-- Form view  -->
	<record id="property_view_form" model= "ir.ui.view">
		<field name="name">Property form view</field>
		<field name="model">property</field>
		<field name="arch" type="xml">
			<form action="">
				<sheet>
					<header>
						<field name="state" widget="statusbar" options="{'clickable':1}"/>
					</header>
					<div class="oe_title">
						<label for="name"/>
						<h1>
							<field name="name"/>
						</h1>
					</div>
					<group>
						<group string="General Info.">
							<field name="date_availability"/>
							<field name="postcode"/>
							<field name="expected_price"/>
							<field name="selling_price"/>
							<field name="bedrooms"/>
							<field name="Living_area"/>
							<field name="facades"/>
						</group>
						
						<group string="Additional Info.">
							<field name="owner_id"/>
							<field name="state"/>
							<field name="garden_area"/>
							<field name="bedrooms"/>
							<field name="garden"/>
							<field name="garden_area"/>
							<field name="garage"/>
							<field name="garden_orientation"/>
						</group>
					</group>

					<group>
						<field name="description"/>
					</group>
				</sheet>
			</form>
		</field>
	</record>


	<!-- for search  -->
	<record id="property_view_search" model="ir.ui.view"> 
		<field name="name">Property search</field>
		<field name="model">property</field>
		<field name="arch" type="xml">
			<search>
				<field name="name" />
				<field name="postcode"/>

				<filter name="is_garden" string="With Garden" domain="[('garden', '=', True)]"/>
				<filter name="is_not_garden" string="Without Garden" domain="[('garden', '=', False)]"/>
				<filter name="is_garage" string="With Garage" domain="[('garage', '=', True)]"/>
			</search>
		</field>
	</record>

	<record id="property_action" model="ir.actions.act_window">
		<field name="name">property action</field>
		<field name="res_model">property</field>
	</record>

	<menuitem 
		id="property_menu_item"
		name="Properties"
		parent="properties_menu"
		action="property_action"
	/>
</odoo>